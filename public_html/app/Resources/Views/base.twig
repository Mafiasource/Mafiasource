    <meta name="twitter:title" content="{{ PAGE_TITLE }}" />
    <meta name="twitter:description" content="{{ PAGE_DESCRIPTION }}" />
    <meta name="twitter:site" content="@{{ routing.settings.gamename }}" />
    <meta name="twitter:image" content="{{ PAGE_IMAGE }}" />
    <meta property="DC.title" content="{{ PAGE_TITLE }}" />
    <meta property="DC.subject" content="{{ PAGE_SUBJECT }}" />
    <meta property="DC.description" content="{{ PAGE_DESCRIPTION }}" />
    <meta property="DC.format" content="text/html" />
    <meta property="DC.publisher" content="{{ AUTHOR }}" />
    <meta property="DC.language" content="{{ langRaw }}" />
    {% set altLang = "nl" %}
    {% set altLangRaw = 'nl-NL' %}
    {% if lang == "nl" %}
        {% set altLang = "en" %}
        {% set altLangRaw = "en-US" %}
    {% endif %}
    <link rel="canonical" href="{{ docRoot }}{{ routing.getReplacedRoute }}" />
    <link rel="alternate" href="{{ docRoot }}{{ routing.getReplacedRoute }}" hreflang="{{ langRaw }}" />
    <link rel="alternate" href="{{ docRoot }}/{{ altLang }}{{ routing.getReplacedRoute }}" hreflang="{{ altLangRaw }}" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-touch-fullscreen" content="yes" />
    <meta name="apple-mobile-web-app-title" content="{{ PAGE_TITLE }}" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar" content="#464646" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <link rel="publisher" href="{{ AUTHOR }}"/>
    <link rel="icon" type="image/x-icon" href="{{ staticRoot }}/web/public/images/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="57x57" href="{{ staticRoot }}/web/public/images/favicon/apple-icon-57x57.png" />
