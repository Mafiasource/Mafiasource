{% import "app/Resources/Views/macros/user.tag.macro.twig" as userTagManager %}

<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="manifest" href="{{ docRoot }}/app.webmanifest" crossorigin="use-credentials" />
