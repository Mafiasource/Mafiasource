    <link rel="preload" href="{{ staticRoot }}/web/public/images/bg.webp" as="image" />
    <link rel="preload" href="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/css/bootstrap.min.css" as="style" />
    <link rel="preload" href="{{ staticRoot }}/web/public/css/homepage.min.css" as="style" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Sirin+Stencil&family=Quicksand:wght@300;400;500;600;700&display=swap" as="style" />
    <link rel="preload" href="{{ staticRoot }}/web/vendor/components/jquery/jquery.min.js" as="script" />
    {# <link rel="preload" href="{{ staticRoot }}/web/public/js/default/jquery.popper.bootstrap.min.js" as="script" /> #}
    {% if routing.getRouteName() == 'register' %}
        <link rel="preload" href="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js" as="script" />
    {% else %}
        <link rel="preload" href="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/js/bootstrap.min.js" as="script" />
    {% endif %}
    <link rel="preload" href="{{ staticRoot }}/web/public/js/outgame.js" as="script" />
    <link rel="stylesheet" href="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ staticRoot }}/web/public/css/homepage.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sirin+Stencil&family=Quicksand:wght@300;400;500;600;700&display=swap" />
    <style type="text/css">
        {% for donatorColor in statusDonatorColors.donatorColors %}
            .{{ donatorColor.getDonator|seoUrl }} {color:{{ donatorColor.getColorCode }};}
        {% endfor %}
        {% for statusColor in statusDonatorColors.statusColors %}
            .{{ statusColor.getStatus|seoUrl }} {color:{{ statusColor.getColorCode }};}
        {% endfor %}
    </style>
    {# Twig stylesheets #}
    {% block stylesheets %}{% endblock stylesheets %}
</head>
<body>
    {% block header %}
    <header id="top" class="header">
        <div class="container cf">
            <div class="logo"></div>
            <nav id="menu" class="cf">
                <ul>
                    {% if userData is not empty and ingame  == true %} {# Notfound in /game/ #}
                        <li><a href="{{ routing.getRouteByRouteName('news') }}">{{ langs.NEWS }}</a></li>
                        <li><a href="{{ routing.getRouteByRouteName('information') }}">{{ langs.INFORMATION }}</a></li>
                        <li><a href="{{ routing.getRouteByRouteName('toplist') }}">{{ langs.TOPLIST }}</a></li>
                        <li><a href="{{ routing.getRouteByRouteName('game-forum') }}">Forum</a></li>
                    {% else %}
                        <li><a href="/">{{ langs.HOME }}</a></li>
                        {% if userData is empty %}
                            {% if not offline %}
                                <li class="hideLargeScreen"><a href="{{ routing.getRouteByRouteName('login') }}">{{ langs.LOGIN }}</a></li>
                                <li><a href="{{ routing.getRouteByRouteName('register') }}">{{ langs.REGISTER }}</a></li>
                            {% endif %}
                            <li><a href="{{ routing.getRouteByRouteName('screenshots') }}">{{ langs.SCREENSHOTS }}</a></li>
                        {% else %}
                            <li><a href="{{ routing.getRouteByRouteName('toplist') }}">{{ langs.TOPLIST }}</a></li>
                            <li><a href="{{ routing.getRouteByRouteName('information') }}">{{ langs.INFORMATION }}</a></li>
                        {% endif %}
                        <li><a href="{{ routing.getRouteByRouteName('forum') }}">{{ langs.FORUM }}</a></li>
                        <li class="d-lg-none"><a href="{{ routing.getRouteByRouteName('terms-and-conditions') }}">{{ langs.TERMS_AND_CONDITIONS }}</a></li>
                        <li class="d-lg-none"><a href="{{ routing.getRouteByRouteName('privacy-policy') }}">{{ langs.PRIVACY_POLICY }}</a></li>
                    {% endif %}
                </ul>
            </nav>

            {% block asideLogin %}
                {% if userData is not empty %}
                    <div class="headUser">
                        {{ userTagManager.write('userOutgame', userData.getId, userData.getId, userData.getUsername, userData.getDonatorID, userData.getUsernameClassName) }}
                    </div>
                {% elseif not offline %}
                    <aside id="login">
                        <form action="/login" method="POST" class="headLogin" autocomplete="off">
                            <input type="text" name="username" placeholder="{{ langs.USERNAME }}" value="{{ username }}"/>
                            <input type="password" name="password" placeholder="{{ langs.PASSWORD }}" value=""/>
                            <button type="submit" name="submit_login" class="button small-1-icon"><img src="{{ staticRoot }}/foto/web/public/images/icons/monitor_go.png" width="16" height="16" class="icon" alt="{{ langs.LOGIN }}"/></button>
                        </form>
                    </aside>
                {% endif %}
            {% endblock asideLogin %}
        </div>
    </header>
    {% endblock header %}

    <section id="content">
        {% block content %}
            Hello word!
        {% endblock content %}

        {% block privacyNotice %}
            <div class="container">
                {% include "/src/Views/.cookies.twig" %}
            </div>
        {% endblock privacyNotice %}
    </section>

    {% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <em><span class="hideMobile">Copyright </span>{{ "now"|date("Y") }} &copy; {{ settings.domainBase|lower }}<span class="hideTablet"> - {{ langs.END_COPY }}</span></em>
                </div>
                <div class="col-4">
                    <small class="hideTablet right">
                        <a href="{{ routing.getRouteByRouteName('terms-and-conditions') }}">{{ langs.TERMS_AND_CONDITIONS }}</a> - <a href="{{ routing.getRouteByRouteName('privacy-policy') }}">{{ langs.PRIVACY_POLICY }}</a>
                    </small>
                    {% set langSet, langName = 'nl', 'Nederlands' %}
                    {% if lang == 'nl' %}
                        {% set langSet, langName = 'en', 'English' %}
                    {% endif %}
                    <a href="{{ routing.getRouteByRouteName('set_lang_' ~ langSet) }}">
                        <img src="{{ staticRoot }}/foto/web/public/images/icons/lang_{{ langSet }}_small.gif" class="langSelect" width="16" height="11" alt="{{ langName }}" />
                    </a>
                </div>
            </div>
        </div>
    </footer>
    {% endblock footer %}

    {# Bootstrap core JavaScript #}
    <!-- <script type="text/javascript" src="{{ staticRoot }}/web/public/js/default/jquery.popper.bootstrap.min.js"></script> -->
    <script type="text/javascript" src="{{ staticRoot }}/web/vendor/components/jquery/jquery.min.js"></script>
    {% if routing.getRouteName() == 'register' %}
        <script type="text/javascript" src="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    {% else %}
        <script type="text/javascript" src="{{ staticRoot }}/web/vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
    {% endif %}
    <script type="text/javascript">
        $("form").each(function(){
            $(this).find("input[name=security-token]").each(function(){
                $(this).remove();
            });
            $(this).append('<input type="hidden" name="security-token" value="{{ securityToken }}"/>');
        });
    </script>
    <script type="text/javascript" src="{{ staticRoot }}/web/public/js/outgame.js"></script>
    {# Twig javascripts #}
    {% block javascripts %}{% endblock %}
</body>
</html>
