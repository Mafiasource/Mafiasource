    <link rel="icon" type="image/png" sizes="16x16" href="{{ staticRoot }}/web/public/images/favicon/favicon-16x16.png" />
    <link rel="mask-icon" href="{{ staticRoot }}/web/public/images/favicon/maskable_icon.png" />
    <link rel="apple-touch-startup-image" media="(width: 320px) and (height: 568px) and (-webkit-device-pixel-ratio: 2)" href="{{ staticRoot }}/web/public/images/favicon/apple-icon-57x57.png" />
    <link rel="apple-touch-startup-image" media="(width: 375px) and (height: 667px) and (-webkit-device-pixel-ratio: 2)" href="{{ staticRoot }}/web/public/images/favicon/apple-icon-60x60.png" />
