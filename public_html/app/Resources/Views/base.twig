    <meta name="keywords" content="{{ PAGE_KEYWORDS }}" />
    <meta name="description" content="{{ PAGE_DESCRIPTION }}" />
    <meta name="copyright" content="{{ "now"|date("Y") }} &copy; {{ routing.settings.domainBase }}" />
    <meta name="application-name" content="{{ routing.settings.gamename }}" />
    <meta name="geo.region" content="{{ langRaw }}" /> 
    <meta name="geo.placename" content="Menen, Belgium" /> 
    <meta name="geo.position" content="50.79722,3.12245" /> 
    <meta name="ICBM" content="50.79722,3.12245" />
